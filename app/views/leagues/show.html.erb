<div class="row">
  <div class="twelve columns league-show__control-buttons">
    <%= link_to "Invite New Member", new_league_membership_path(@league), class: "button nav-button" %>
    <%= button_to "New Season", league_seasons_path(@league), class: "button button-primary nav-button" %>
    <% if @league.active_season %>
      <%= link_to "Schedule Game in Active Season", new_season_game_path(@league.active_season), class: "button" %>
    <% end %>
  </div>
  <div class="twelve columns">
    <h2><%= @league.name %></h2>
    <p>Seasons: <%= @league.seasons_count %></p>
    <%= link_to "View Members", league_memberships_path(@league) =%>
    <% @league.games.date_time_order.each do |game| %>
      <li><%= link_to "Game #{game.decorate.formatted_date}", season_game_path(game.season, game) %></li>
    <% end %>
  </div>
</div>
