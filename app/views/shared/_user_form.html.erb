<div class="field">
  <%= f.label :email, "Email Address", class: "label" %>
    <div class="control">
      <%= f.text_field :email, class: "input" %>
    </div>
</div>
<div class="field">
  <%= f.label :password, "Password", class: "label" %>
  <div class="control">
    <%= f.password_field :password, class: "input" %>
  </div>
</div>
<div class="field">
  <p class="control">
    <%= f.submit "Let's Go!", class: "button is-primary" %>
  </p>
</div>
